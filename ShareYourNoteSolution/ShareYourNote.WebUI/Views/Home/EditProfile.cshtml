@model ShareYourNote.Entities.ShareYourNoteUser

@{
    ViewBag.Title = "EditProfile";
}

<style>
    .validation-summary-errors ul {
        color: red;
    }
</style>



@using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container py-5">
        <h2 class="text-center pb-2"></h2>
        <div class="row">
            <div class="col-lg-3 justify-content-center">
                <div class="col-lg-12 card h-100">
                    <div class="card-body ">
                        <div class="mx-auto col-sm-10">
                            <img src="~/UploadedFiles/ProfileImages/@Model.ProfilePhotoName" class="img-circle" width="128" height="128" />
                            @Html.HiddenFor(model => model.ProfilePhotoName)
                            <input type="file" name="ProfileImage" class="form-control" /><br />
                            <span><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 ">
                <div class="col-lg-12 card h-100">
                    <div class="card-body">
                        <h2 class="text-center mb-4">@Model.Username</h2>
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label for="input2EmailForm" class="sr-only form-control-label">Adınız</label>
                            <div class="mx-auto col-sm-10">
                                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", placeholder = "Adınız" })
                                @Html.ValidationMessageFor(Model => Model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input2EmailForm" class="sr-only form-control-label">Soyadınız</label>
                            <div class="mx-auto col-sm-10">
                                @Html.TextBoxFor(model => model.Surname, htmlAttributes: new { @class = "form-control", placeholder = "Soyadınız" })
                                @Html.ValidationMessageFor(Model => Model.Surname)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input2EmailForm" class="sr-only form-control-label">Kullanıcı Adınız</label>
                            <div class="mx-auto col-sm-10">
                                @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                                @Html.ValidationMessageFor(Model => Model.Username)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input2PasswordForm" class="sr-only form-control-label">password</label>
                            <div class="mx-auto col-sm-10">
                                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Şifre", type = "password" })
                                @Html.ValidationMessageFor(Model => Model.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input2EmailForm" class="sr-only form-control-label">E-Posta</label>
                            <div class="mx-auto col-sm-10">
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", placeholder = "E-Posta" })
                                @Html.ValidationMessageFor(Model => Model.Email)
                            </div>
                        </div>
                        <div class="mx-auto col-sm-10 pb-3 pt-2 form-group">

                            @Html.ActionLink("İptal", "ShowProfile", "Home", null, new { @class = "btn btn-outline-secondary btn-lg btn-block" })
                            <input type="submit" value="Kaydet" class="btn btn-outline-secondary btn-lg btn-block" />
                            @Html.ValidationSummary(true)
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
}

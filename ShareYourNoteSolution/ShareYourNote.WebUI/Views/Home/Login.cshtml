@model ShareYourNote.Entities.ValueObjects.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<style>
    .validation-summary-errors ul {
        color: red;
    }
</style>

@using (Html.BeginForm())
{
    <div class="container py-5">
        <h2 class="text-center pb-2"></h2>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 col-12 pb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Giriş Yap</h2>
                        <form class="py-2" role="form">
                            <div class="form-group">
                                <label for="inputEmailForm" class="sr-only form-control-label">Email</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                                    @Html.ValidationMessageFor(Model => Model.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPasswordForm" class="sr-only form-control-label">Şifre</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Şifre", type = "password" })
                                    @Html.ValidationMessageFor(Model => Model.Password)

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="mx-auto col-sm-10 pb-3 pt-2">
                                    <button type="submit" class="btn btn-outline-secondary btn-lg btn-block">Sign-in</button>
                                    @Html.ValidationSummary(true)
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
}
@model ShareYourNote.Entities.ValueObjects.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    .validation-summary-errors ul{
        color: red;
    }
</style>



@using (Html.BeginForm())
{
    <div class="container py-5">
        <h2 class="text-center pb-2"></h2>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 col-12 pb-3">

                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Sign-up</h2>
                        <form role="form">
                            <div class="form-group">
                                <label for="input2EmailForm" class="sr-only form-control-label">Kullanıcı Adı</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                                    @Html.ValidationMessageFor(Model => Model.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input2EmailForm" class="sr-only form-control-label">email</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", placeholder = "E-posta" })
                                    @Html.ValidationMessageFor(Model => Model.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input2PasswordForm" class="sr-only form-control-label">password</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Şifre", type = "password" })
                                    @Html.ValidationMessageFor(Model => Model.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input2Password2Form" class="sr-only form-control-label">verify</label>
                                <div class="mx-auto col-sm-10">
                                    @Html.TextBoxFor(model => model.VerifyPassword, htmlAttributes: new { @class = "form-control", placeholder = "Şifre Doğrula", type = "password" })
                                    @Html.ValidationMessageFor(Model => Model.VerifyPassword)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="mx-auto col-sm-10 pb-3 pt-2">
                                    <button type="submit" class="btn btn-outline-secondary btn-lg btn-block">Register</button>
                                    <div class="mt-2">
                                        @Html.ValidationSummary(true)
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
}

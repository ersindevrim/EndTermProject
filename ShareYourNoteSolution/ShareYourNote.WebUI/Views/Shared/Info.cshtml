@model ShareYourNote.WebUI.ViewModels.InfoViewModel

@{
    ViewBag.Title = "Info";
}


<div class="container py-5">
    <h2 class="text-center pb-2"></h2>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 col-12 pb-3">

            <div class="card h-100">
                <div class="card-body">
                    <h2 class="text-center mb-4">@Model.Title</h2>
                    @foreach (var item in Model.Items)
                    {
                        @item<br />
                    }
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = " setTimeout(function () { window.location = '" + @Model.RedirectingUrl + "'; },5000);";
    }
}

<script>

    $(
        function() {
            @Html.Raw(js);
        });

</script>

